@model IEnumerable<VPetShop.Models.Product>
@using Newtonsoft.Json

@{
    ViewData["Title"] = "Trang Chủ";
    var dogs = Model?.Where(p => p.CategoryId == 1).Take(6).ToList() ?? new List<VPetShop.Models.Product>();
    var cats = Model?.Where(p => p.CategoryId == 2).Take(6).ToList() ?? new List<VPetShop.Models.Product>();
}

<main>
    <section id="dogs" class="products-bg">
        <h2 class="text-center logo-font mb-4 animate__animated animate__bounceIn">Chó Cảnh Của Chúng Tôi</h2>
        <p class="text-center mb-5 animate__animated animate__fadeIn">Khám phá những chú chó đáng yêu, phù hợp để trở thành bạn đồng hành trong gia đình bạn!</p>
        <div class="row">
            @foreach (var product in dogs)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card product-card animate__animated animate__fadeInUp" data-name="@product.Name" data-image="@product.ImagePath" data-new-price="@product.NewPrice.ToString("C0", new System.Globalization.CultureInfo("en-US"))" data-old-price="@product.OldPrice.ToString("C0", new System.Globalization.CultureInfo("en-US"))" data-description="@product.Description" data-details='@JsonConvert.SerializeObject(product.Details)'>
                        <img src="@product.ImagePath" class="card-img-top img-thumbnail" alt="@product.Name" />
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="price-text">
                                Giá mới: <span class="new-price">@product.NewPrice.ToString("C0", new System.Globalization.CultureInfo("en-US"))</span>
                                <span class="old-price">@product.OldPrice.ToString("C0", new System.Globalization.CultureInfo("en-US"))</span>
                            </p>
                            <p class="card-description text-truncate">@product.Description</p>
                            <p><strong>Danh mục:</strong> @(product.Category?.Name ?? "Không xác định")</p>
                            <div class="d-flex gap-2">
                                <a href="#" class="btn btn-success flex-fill">Mua Ngay</a>
                                <button type="button" class="btn btn-outline-info flex-fill view-details" data-bs-toggle="modal" data-bs-target="#productModal">Xem Chi Tiết</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <section id="cats" class="products-bg mt-5">
        <h2 class="text-center logo-font mb-4 animate__animated animate__bounceIn">Mèo Cảnh Của Chúng Tôi</h2>
        <p class="text-center mb-5 animate__animated animate__fadeIn">Khám phá những chú mèo đáng yêu, phù hợp để trở thành bạn đồng hành trong gia đình bạn!</p>
        <div class="row">
            @foreach (var product in cats)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card product-card animate__animated animate__fadeInUp" data-name="@product.Name" data-image="@product.ImagePath" data-new-price="@product.NewPrice.ToString("C0", new System.Globalization.CultureInfo("en-US"))" data-old-price="@product.OldPrice.ToString("C0", new System.Globalization.CultureInfo("en-US"))" data-description="@product.Description" data-details='@JsonConvert.SerializeObject(product.Details)'>
                        <img src="@product.ImagePath" class="card-img-top img-thumbnail" alt="@product.Name" />
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="price-text">
                                Giá mới: <span class="new-price">@product.NewPrice.ToString("C0", new System.Globalization.CultureInfo("en-US"))</span>
                                <span class="old-price">@product.OldPrice.ToString("C0", new System.Globalization.CultureInfo("en-US"))</span>
                            </p>
                            <p class="card-description text-truncate">@product.Description</p>
                            <p><strong>Danh mục:</strong> @(product.Category?.Name ?? "Không xác định")</p>
                            <div class="d-flex gap-2">
                                <a href="#" class="btn btn-success flex-fill">Mua Ngay</a>
                                <button type="button" class="btn btn-outline-info flex-fill view-details" data-bs-toggle="modal" data-bs-target="#productModal">Xem Chi Tiết</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <section class="text-center py-5">
        <h2 class="logo-font mb-4 animate__animated animate__bounceIn">Theo Dõi Chúng Tôi</h2>
        <div class="d-flex justify-content-center gap-3 animate__animated animate__fadeIn">
            <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
            <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
            <a href="#" class="social-link"><i class="fab fa-linkedin"></i></a>
        </div>
    </section>
</main>

@section Scripts {
    <script>
        document.querySelectorAll(".view-details").forEach((button) => {
            button.addEventListener("click", function () {
                const card = this.closest(".card");
                if (!card) return;
                const modal = document.getElementById("productModal");
                if (!modal) return;

                modal.querySelector(".modal-title").textContent = card.dataset.name || "N/A";
                modal.querySelector(".modal-image").src = card.dataset.image || "";
                modal.querySelector(".modal-image").alt = `Hình ảnh ${card.dataset.name || "N/A"}`;
                modal.querySelector(".new-price").textContent = card.dataset.newPrice || "N/A";
                modal.querySelector(".old-price").textContent = card.dataset.oldPrice || "N/A";
                modal.querySelector(".modal-description").textContent = card.dataset.description || "N/A";

                try {
                    const details = JSON.parse(card.dataset.details || "{}");
                    modal.querySelector(".modal-origin").textContent = details.origin || "N/A";
                    modal.querySelector(".modal-weight").textContent = details.weight || "N/A";
                    modal.querySelector(".modal-temperament").textContent = details.temperament || "N/A";
                    modal.querySelector(".modal-health").textContent = details.health || "N/A";
                } catch (e) {
                    console.error("Error parsing details:", e);
                }

                modal.querySelector(".modal-buy-now").href = "#";
            });
        });
    </script>
}