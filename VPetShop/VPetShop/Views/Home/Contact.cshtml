@{
    ViewData["Title"] = "Liên Hệ";
}

<main>
    <section class="contact-bg py-5">
        <div class="container">
            <h2 class="text-center logo-font mb-4">Liên Hệ Với Chúng Tôi</h2>
            <p class="text-center mb-5">Hãy điền thông tin dưới đây để chúng tôi liên hệ và hỗ trợ bạn!</p>
            <div class="row">
                <div class="col-md-6">
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Họ và Tên</label>
                            <input type="text" class="form-control contact-input" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control contact-input" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Số Điện Thoại</label>
                            <input type="tel" class="form-control contact-input" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tin Nhắn</label>
                            <textarea class="form-control contact-input" rows="4"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success contact-btn">Gửi Tin Nhắn</button>
                    </form>
                </div>
                <div class="col-md-6">
                    <h3>Thông Tin Liên Hệ</h3>
                    <p>Email: support@banthucung.com</p>
                    <p>Điện thoại: +84 352 032 375</p>
                    <p>Địa chỉ: 11 Đường E, TP. HCM</p>
                    <h4>Theo Dõi Chúng Tôi</h4>
                    <div class="d-flex gap-2">
                        <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>