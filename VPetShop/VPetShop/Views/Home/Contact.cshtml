@{
    ViewData["Title"] = "Liên Hệ";
}

<main>
    <section class="contact-bg py-5">
        <div class="container">
            <h2 class="text-center logo-font mb-4 animate__animated animate__bounceIn">Liên Hệ Với Chúng Tôi</h2>
            <p class="text-center mb-5 animate__animated animate__fadeIn">Hãy điền thông tin dưới đây để chúng tôi liên hệ và hỗ trợ bạn!</p>
            <div class="row">
                <div class="col-md-6 animate__animated animate__fadeInLeft">
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Họ và Tên</label>
                            <input type="text" class="form-control contact-input animate__animated animate__fadeIn" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input type="email" class="form-control contact-input animate__animated animate__fadeIn" style="animation-delay: 0.2s" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Số Điện Thoại</label>
                            <input type="tel" class="form-control contact-input animate__animated animate__fadeIn" style="animation-delay: 0.4s" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Tin Nhắn</label>
                            <textarea class="form-control contact-input animate__animated animate__fadeIn" rows="4" style="animation-delay: 0.6s"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success contact-btn animate__animated animate__pulse">Gửi Tin Nhắn</button>
                    </form>
                </div>
                <div class="col-md-6 animate__animated animate__fadeInRight">
                    <h3 class="mb-3">Thông Tin Liên Hệ</h3>
                    <p>Email: <a href="mailto:support@banthucung.com" class="text-decoration-none text-primary">support@banthucung.com</a></p>
                    <p>Điện thoại: <a href="tel:+84352032375" class="text-decoration-none text-primary">+84 352 032 375</a></p>
                    <p>Địa chỉ: 11 Đường E, TP. HCM</p>
                    <h4 class="mt-4 mb-3">Theo Dõi Chúng Tôi</h4>
                    <div class="d-flex gap-2">
                        <a href="#" class="social-link animate__animated animate__fadeIn"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-link animate__animated animate__fadeIn" style="animation-delay: 0.2s"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-link animate__animated animate__fadeIn" style="animation-delay: 0.4s"><i class="fab fa-instagram"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>